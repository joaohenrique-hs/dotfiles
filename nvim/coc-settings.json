{
  "editor.codeActionOnSave": {
    "source.fixAll.eslint": true
  },
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "json",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "suggest.echodocSupport": true,
  "suggest.maxCompleteItemCount": 20,
  "eslint.autoFixOnSave": true,
  "typescript.validate.enable": true,
  "eslint.filetypes": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "typescript.tsx"
  ],
  "snippets.extends": {
    "javascriptreact": ["typescriptreact", "javascript"]
  },
  "diagnostic.errorSign": "•",
  "diagnostic.warningSign": "•",
  "diagnostic.infoSign": "•",
  "prettier.singleQuote": true,

  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "explorer.position": "right",
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],
  "explorer.file.hiddenRules": {
    "extensions": ["o", "a", "obj", "pyc"],
    "filenames": ["node_modules"],
    "patternMatches": ["^\\."]
  },
  // Icons
  "explorer.file.column.git.icon.modified": "•",
  "explorer.file.column.git.icon.added": "+",
  "explorer.file.column.git.icon.deleted": "",

  "explorer.floating.border.title": "Explorer"
}
